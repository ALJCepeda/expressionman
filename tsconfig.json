{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "rootDirs": [
      "./src",
      "./example"
    ],
    "outDir": "./dist",
    "lib": ["esnext"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
